<?xml version="1.0" encoding="utf-8"?>
<manifest package="szz.com.thirdworld"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <!-- To auto-complete the account text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>

    <application
        android:name="com.thirdworld.application.ThirdWorldApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.thirdworld.activity.SocketActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.thirdworld.activity.LoginActivity"
            android:label="@string/title_activity_login">
        </activity>
        <activity
            android:name="com.thirdworld.activity.SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
        <activity android:name="com.thirdworld.activity.ThirdWoldAct">
        </activity>
        <activity android:name="com.thirdworld.activity.AutoWorkActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>